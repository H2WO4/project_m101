{
  "name": "cityflow-analytics-dashboard",
  "version": "1.0.0",
  "description": "Dashboard temps réel pour CityFlow Analytics - Smart City IoT Traffic Management",
  "main": "dist/backend-server.js",
  "scripts": {
    "build": "npm run build:backend && npm run build:dashboard",
    "build:backend": "tsc",
    "build:dashboard": "tsc --project tsconfig.dashboard.json",
    "start": "node dist/backend-server.js",
    "dev": "ts-node-dev --respawn --transpile-only backend-server.ts",
    "watch": "tsc --watch",
    "watch:dashboard": "tsc --project tsconfig.dashboard.json --watch",
    "clean": "rm -rf dist",
    "test": "echo \"Tests à implémenter\" && exit 0"
  },
  "keywords": [
    "iot",
    "smart-city",
    "traffic",
    "websocket",
    "real-time",
    "dashboard"
  ],
  "author": "CityFlow Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "mqtt": "^5.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/ws": "^8.5.10",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
